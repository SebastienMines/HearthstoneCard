<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dos_carte"
    android:scaleType = "centerCrop"
    tools:context="fr.alfun.smines.hearthstonecard.activity.CarteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_carte"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:src="@drawable/placeholder_card" />


        <TextView style="@style/appTheme"
            android:id="@+id/name_carte_solo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tirion"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_carte_solo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_carte_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/description_acces_rage"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>